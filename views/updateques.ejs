<%- include('header.ejs') %>
<body>
    <form id = 'show-form' action="/create">
        <button id="post-btn">Create new</button><br>
    </form>  
        <h1> Quiz Question</h1>
        <ol>
            <% for(var i = 0; i < quiz.length; i++) { %>
                <li>
                    <p><%- quiz[i].question %></p>
                    <form action="/edit/<%- quiz[i]._id %>">
                        <button id="edit-btn" type="submit" >Edit</button>
                    </form>

                    <a href="#" data-toggle="modal" class="btn btn-primary" data-target="#exampleModal<%- i %>" >Delete</a>

                </li>   
                <%- include('del.ejs',{link: `quiz/delete/${quiz[i]._id}`, Sno: i  }) %> 

            <% } %>
        </ol>

    <script src="quiz.js"></script>
	
    <style>
        body{
           background-color: rgb(216, 241, 241);
            font-family: Verdana, Geneva, Tahoma, sans-serif; 
         }
         h1{
             align-items: center;
         }
         button{
             cursor: pointer;
         }
        
         #post-btn{
	box-shadow: 0px 0px 0px 2px #9fb4f2;
	background:linear-gradient(to bottom, #7892c2 5%, #476e9e 100%);
	background-color:#7892c2;
	border-radius:10px;
	border:1px solid #4e6096;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Arial;
	font-size:19px;
	padding:12px 37px;
	text-decoration:none;
	text-shadow:0px 1px 0px #283966;
}
#post-btn:hover {
	background:linear-gradient(to bottom, #476e9e 5%, #7892c2 100%);
	background-color:#476e9e;
}
#post-btn:active {
	position:relative;
	top:1px;
}
#edit-btn{
    
	box-shadow:inset 0px 1px 0px 0px #d9fbbe;
	background:linear-gradient(to bottom, #b8e356 5%, #a5cc52 100%);
	background-color:#b8e356;
	border-radius:6px;
	border:1px solid #83c41a;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Arial;
	font-size:15px;
	font-weight:bold;
	padding:6px 24px;
	text-decoration:none;
	text-shadow:0px 1px 0px #86ae47;
}
#edit-btn:hover {
	background:linear-gradient(to bottom, #a5cc52 5%, #b8e356 100%);
	background-color:#a5cc52;
}
#edit-btn:active {
	position:relative;
	top:1px;
}


            
    </style>
</body>
